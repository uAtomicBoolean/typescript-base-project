{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"rootDir": "./src/",
		"outDir": "./dist/",
		"sourceMap": true,
		"resolveJsonModule": true,
		"baseUrl": "./",
		"paths": {
			"@src/*": [ "./src/*" ],
			"@lib/*": [ "./src/lib/*" ],
		}
	},
	"files": [
		"src/index.ts"
	],
	"include": [
		"./**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}